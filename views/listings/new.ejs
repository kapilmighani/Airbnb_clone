<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form action="/listing/create"  method="post" class="needs-validation" novalidate>

        <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input  class="form-control" type="text" name="listing[title]" id="title" required>
        <div class="invalid-feedback">Title should be valid</div>
        </div>

        <div class="md-3">
        <label for="description" class="form-label">Description</label>
        <textarea  class="form-control" name="listing[description]" id="description" required></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
        </div>
        
        <div class="md-3-md">
        <label for="image" class="form-label">Image Link</label>
        <input class="form-control" type="text" name="listing[image][url]" id="image">
        </div>

        <div class="row">
            <div class="md-3 col-md-4">  
            <label for="price" class="form-label">Price</label>
            <input  class="form-control" type="text" name="listing[price]" id="price" required>
            <div class="invalid-feedback">Price should be valid</div>
            </div>
        
            <div class="md-3 col-8">
            <label  for="country" class="form-label">Country</label>
            <input  class="form-control" type="text" name="listing[country]" id="country" required>
            <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
        

        <div class="md-3">
        <label for="location" class="form-label">Location</label>
        <input  class="form-control" type="text" name="listing[location]" id="location" required>
        <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>

    </form>
    </div>
</div>