<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-3 mt-3">
        <h3>Listing Details</h3>
    </div>    
    <div class="card col-6 offset-3 show-card">
        <img src="<%=list.image.url%>" class="card-img-top show-img" alt="listing_img">
        <div class="card-body">
         <p class="card-text">
         <b>NAME  :<%=list.title%></b> <br>
         <b>ABOUT :</b><%= list.description %>
         <br>
         <b>PRICE :</b>&#8377;<%= list.price %> <br>
         <b>LOCATION  :</b><%= list.location %>
        </p>
        </div>    
</div>
<br>
<div class="btns">
    <a href="/listing/<%=list._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form action="/listings/<%= list._id %>?_method=delete" method="post">
        <button class="btn btn-dark offset-3">Delete</button>
    </form>
</div>
</div>
