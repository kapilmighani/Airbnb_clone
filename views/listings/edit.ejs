<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <form method="post" action="/listing/<%=h._id%>?_method=put" class="needs-validation" novalidate>

            <div class="md-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control"  value="<%= h.title %>"  type="text" name="data[title]" id="title" required>
                <div class="invalid-feedback">Title should be valid</div>
            </div>
            
            <div class="md-3">
                <label class="form-label"  for="description">Description</label>
                <textarea class="form-control"  name="data[description]" id="description" required> <%= h.description %></textarea>
                <div class="invalid-feedback">Please enter a short description</div>
            </div>

            <div class="md-3">
                <label class="form-label"  for="image">Image</label>
                <input class="form-control" placeholder="url"  value="<%= h.image.url %>" type="text" name="data[image][url]" id="image" required>
                <div class="invalid-feedback">Please enter a valid link for a image</div>
            </div>

            <div class="row">

                <div class="md-3 col-md-4">
                    <label class="form-label"  for="price" >Price</label>
                    <input class="form-control"  value="<%= h.price %>" type="text" name="data[price]" id="price" required>
                    <div class="invalid-feedback">Price should be valid</div>
                </div>
    
                <div class="md-3 col-md-8">
                    <label class="form-label"  for="country" >Country</label>
                    <input class="form-control"  value="<%= h.country %>" type="text" name="data[country]" id="country" required>
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
    

            </div>

            <div class="md-3">
                <label class="form-label"  for="location">Location</label>
                <input class="form-control" value="<%= h.location %>" type="text" name="data[location]" id="location" required>
                <div class="invalid-feedback">Location should be valid</div>
            </div>

            <button class="btn btn-dark edit-btn mt-3">Edit</button>

        </form>
    </div>    

</div>
<script src="/js/script.js"></script>

